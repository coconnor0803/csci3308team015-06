<form action="/register" method="POST">
    <div class="row justify-content-center">
      <!--- <div class="container">
        <div class="image">
           <img src ="../../pictures/LearnMasterLogo.png">
          <img src="https://imgur.com/a/2LB3cXU">
        </div>
      </div>
      --->
      <div class="col-md-6">
        <h1>Register</h1>
        <label for="username">Username:</label><br>
        <input type="text" id="username" name="username" class="form-control"><br>
        <label for="password">Password:</label><br>
        <input type="text" id="password" name="password" class="input-box"><br><br>
        <p id="message">Password is <span id="strength"></span></p>
        <p id ="msg1"> Password is missing a special character.</p> 
        <p id="msg2" > Password is missing a number.</p>
        <style>
          .input-box {
            width: 2000px;
            max-width: 100%;
            height: 40px;
            position: relative;
            border-radius: 6px;
          }
          .input-box input {
            width: 100%;
            height: 60px;
            padding: 0 20px;
            border: 1px solid #ccc;
            outline: none;
            color: #fff;
            background: transparent;
          }
            #message {
              position: relative;
              color: #000;
              bottom: 10px;
              font-size: 15px;
              display: none;
            }
            #msg1 {
              position: relative;
              color: #000;
              bottom: 10px;
              font-size: 15px;
              display: none;
            }
            #msg2 {
              position: relative;
              color: #000;
              bottom: 10px;
              font-size: 15px;
              display: none;
            }
            ::placeholder {
              font-size: 15px;
            }
          
        </style>
        <input type="submit" value="Register" class="btn btn-primary btn-block">
        <p class="mt-3 text-center">If you already have an account, <a href="/login">click here to login</a>.</p>
      </div>
    </div>
    <script>
      var pass = document.getElementById("password");
      var message = document.getElementById("message");
      var strength = document.getElementById("strength");
       var msg1 = document.getElementById("msg1");
        var msg2 = document.getElementById("msg2");

      pass.addEventListener('input', ()=> {
        if(pass.value.length > 0) {
          message.style.display = "block";
          msg1.style.display = "block";
          msg2.style.display = "block";
        }
        if(/[!@#$%^&*(),.?":{}|<>]/.test(pass.value)) {
          msg1.style.display = "none";
        }
        if(/\d/.test(pass.value)) {
          msg2.style.display = "none";
        }
        if(pass.value.length < 4) {
          strength.innerHTML= "weak";
          pass.style.borderColor = "#ff5925";
          message.style.color = "#ff5925";
        }
        else if(pass.value.length >= 4 && (pass.value.length < 8 || /[!@#$%^&*(),.?":{}|<>]/.test(pass.value) == false || /\d/.test(pass.value) ==false)) {
          strength.innerHTML= "medium";
          pass.style.borderColor = "yellow";
          message.style.color = "yellow";
        }
        else if(pass.value.length >= 8 && /[!@#$%^&*(),.?":{}|<>]/.test(pass.value) && /\d/.test(pass.value)) {
          strength.innerHTML = "strong";
          pass.style.borderColor = "#26d730";
          message.style.color = "#26d730";
        }

        else {
          message.style.display = "none";
        }
      })
    </script>
</form>
